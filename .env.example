# =============================================================================
# Solana RPC Provider (get key from https://helius.dev)
# =============================================================================
HELIUS_API_KEY=your-api-key-here
SOLANA_RPC_ENDPOINT=https://mainnet.helius-rpc.com/?api-key=your-api-key-here
SOLANA_WS_ENDPOINT=wss://mainnet.helius-rpc.com/?api-key=your-api-key-here

# =============================================================================
# PostgreSQL
# =============================================================================
POSTGRES_USER=solana
POSTGRES_PASSWORD=change-me-in-production
POSTGRES_DB=solana_lab
# Full DSN for docker-compose services (uses internal hostname)
POSTGRES_DSN=postgres://solana:change-me-in-production@postgres:5432/solana_lab?sslmode=disable

# =============================================================================
# ClickHouse
# =============================================================================
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=change-me-in-production
CLICKHOUSE_DB=solana_lab
# Full DSN for docker-compose services (uses internal hostname)
CLICKHOUSE_DSN=clickhouse://default:change-me-in-production@clickhouse:9000/solana_lab
